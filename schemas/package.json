{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "properties":
    {
        "$schema":
        {
            "type": "string"
        },
        "version":
        {
            "type": "array",
            "description": "Semantic version",
            "minimum": 0,
            "maximum": 9,
            "maxItems": 3,
            "minItems": 3,
            "items":
            {
                "type": "integer"
            }
        },
        "projects":
        {
            "type": "object",
            "description": "Include extra assets json",

            "patternProperties":
            {
                "^[A-Za-z.]+$":
                {
                    "type": "object",
                    "properties":
                    {
                        "name":
                        {
                            "type": "string",
                            "description": "Name to display in the installer"
                        },
                        "assets":
                        {
                            "type": "string",
                            "description": "Assets file to lookup for"
                        },
                        "additionalProperties": false
                    },
                    "required":
                    [
                        "name",
                        "assets"
                    ],
                    "description": "Project definition",
                    "additionalProperties": false
                }
            },
            "additionalProperties": false
        },
        "additionalProperties": false
    },
    "required":
    [
        "version",
        "projects"
    ]
}
