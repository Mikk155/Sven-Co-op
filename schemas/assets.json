{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "properties":
    {
        "$schema":
        {
            "type": "string"
        },
        "assets":
        {
            "type": "array",
            "description": "List of assets"
        },
        "includes":
        {
            "type": "array",
            "description": "Include extra assets json"
        },
        "script":
        {
            "type": "string",
            "description": "Python script module to load and execute after the installation is done. the directory is in \"<workspace>/scripts/tasks/\" see task_example.py and task.py"
        }
    },
    "additionalProperties": false,
    "required":
    [
        "assets"
    ]
}
