{
    "code-runner.executorMapByFileExtension":
    {
        ".as": ".\\code-runner $fullFileName"
    },
    "code-runner.runInTerminal": true,

    "emeraldwalk.runonsave":
    {
        "commands":
        [
            {
                "match": "\\assets.json$",
                "cmd": "start cmd /c code-runner ${file}"
            }
        ]
    },

    "remove-tabs-on-save.ignoreFileExtensions": [
        "*.cpp",
        "*.h"
    ],
    "editor.indentSize": 4,
    "editor.formatOnPaste": false,
    "editor.formatOnSave": false,
    "editor.formatOnType": false,
    "editor.codeLens": false,

    // Somehow C# overrided the aboves
    "[csharp]":
    {
        "editor.indentSize": 4,
        "editor.formatOnPaste": false,
        "editor.formatOnSave": false,
        "editor.formatOnType": false,
        "editor.codeLens": false,
    },

    // File excludes
    "files.exclude":
    {
        "**/__pycache__": true,
        "**/obj": true,
        "**/bin": true,
        "code-runner.*": true
    },

    "search.exclude":
    {
        "build": true,
        "**/__pycache__": true,
        "**/obj": true,
        "**/bin": true,
        "code-runner.*": true
    },

    "C_Cpp.codeAnalysis.exclude":
    {
        "build": true,
        "**/__pycache__": true,
        "**/obj": true,
        "**/bin": true,
        "code-runner.*": true
    },

    "C_Cpp.files.exclude":
    {
        "build": true,
        "**/__pycache__": true,
        "**/obj": true,
        "**/bin": true,
        "code-runner.*": true
    },

    "python.analysis.exclude": [
        "build",
        "**/__pycache__",
        "**/obj",
        "**/bin",
        "code-runner.*"
    ],

    "files.associations":
    {
