{
    "files.exclude":
    {
        "**/__pycache__": true,
        "**/obj": true,
        "**/bin": true
    },

    "search.exclude":
    {
        "**/__pycache__": true,
        "**/obj": true,
        "**/bin": true
    },

    "[csharp]":
    {
        "editor.indentSize": 4,
        "editor.formatOnPaste": false,
        "editor.formatOnSave": false,
        "editor.formatOnType": false,
        "editor.codeLens": false
    },

    "code-runner.executorMapByFileExtension":
    {
        ".as": "python scripts/code-runner.py -file \"$fullFileName\""
    },

    "code-runner.runInTerminal": true,

    "emeraldwalk.runonsave":
    {
        "commands":
        [
            {
                "match": "\\assets.json$",
                "cmd": "start cmd /c python scripts/code-runner.py -file \"${file}\""
            }
        ]
    }
}
